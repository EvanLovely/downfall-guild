{% extends "@templates/site-layout.twig" %}

{% block header %}
  {% include "@molecules/header-block/header-block.twig" %}
{% endblock %}

{% block content %}
    <div class="news text-center">

      <div class="news__top">
          <h2 class="title news__title">Downfall News</h2>
          <h5 class="news__description">Latest posts, events, and raid kills. Make sure to check out full <a href="#">Posts</a> page for much more.</h5>
      </div>

      <div class="news__pinned row">

        {% for pinned in newsPinned %}
          <div class="col-md-6">
            {% include "@molecules/cards/card-full-bg.twig" with pinned %}
          </div>
        {% endfor %}

      </div>

      <div class="news__list">

        {% for news_item in news %}
          {% include "@molecules/cards/card-plain.twig" with news_item %}
        {% endfor %}

      </div>
    </div>
{% endblock %}

{% block sidebar %}
  {% include "@molecules/profiles/profile-medium.twig" %}
  {% include "@molecules/lists/content-list.twig" %}
  {% include "@molecules/lists/content-list.twig" %}
{% endblock %}
