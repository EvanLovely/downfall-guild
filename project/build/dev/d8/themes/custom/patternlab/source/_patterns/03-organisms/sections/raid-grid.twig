<div class="raids-grid">
  <div class="raids-grid__top filter-top clearfix">
    <div class="col-sm-12">
      <h2 class="title text-center">Downfall Raids</h2>
      <br>
    </div>

    <div class="pull-left">
      {% include "@molecules/navs/nav-tabs.twig" with {
        links: [
          {url: '#', text: 'Active'},
          {url: '#', text: 'Retired'},
          {url: '#', text: 'All'},
        ]
      }%}
    </div>
    <div class="pull-right">
      {% include "@molecules/navs/dropdown.twig" %}
    </div>

  </div>

  <div class="raids-grid__content row">

    {% for raid in raids %}
      <div class="col-sm-4 thumb">
        {% include "@molecules/cards/card-full-bg-raid.twig" with {
          title: raid.title,
          teaser: raid.slogan,
          icon: raid.icon,
          member_count: raid.member_count
        }%}
      </div>
      {% if loop.index is divisible by(3) %}
        <div class="clearfix"></div>
      {% endif %}

    {% endfor %}
  </div>
  {% include "@atoms/navs/pagination.twig" %}
</div>
