{% extends "@templates/site-layout.twig" %}

{% block content %}
  <div class="text-center raid">

    <div class="raid-top row">
      <div class="col-sm-12">
        <h2 class="title">37 Members</h2>
      </div>

      <div class="row">

        {% for character in characters %}
          <div class="col-sm-2">
            {% include "@molecules/character/raid-member/raid-member.twig" with {
              'character': character
            } %}
          </div>
        {% endfor %}

      </div> <!-- /.row -->


    </div>

    <div class="features text-center">

      <div class="row">
        <div class="col-md-4">

          {#<div class="info">#}
            {#<h1 class="title">37</h1>#}

            {#<h4 class="info-title"><i class="material-icons">person_add</i> members</h4>#}

            {#<p>{% include "@atoms/buttons/button.twig" with {#}
                {#'button_color': 'success',#}
                {#'button_text': 'Join',#}
                {#'button_size': 'large',#}
              {#}%}</p>#}
          {#</div>#}

        </div>

        <div class="col-md-4">
          <div class="info">
            <div class="icon">
              <i class="material-icons">group</i>
            </div>
            <h4 class="info-title">Join Raid Groups</h4>
            <p>Add your WoW character to Downfall raid groups by clicking "Join" on any of the groups below.</p>
            <p>{% include "@atoms/buttons/button.twig" with {
              'button_color': 'primary',
              'button_text': 'Example Raid',
              'button_size': 'large',
              }%}</p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="info">
            <div class="icon">
              <i class="material-icons">event</i>
            </div>
            <h4 class="info-title">6 Upcoming Events</h4>
            <p>Navigate to any Raid Group to see and sign up for upcoming Raid Events.</p>
            <p>{% include "@atoms/buttons/button.twig" with {
              'button_color': 'primary',
              'button_text': 'Example Event',
              'button_size': 'large',
              }%}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

