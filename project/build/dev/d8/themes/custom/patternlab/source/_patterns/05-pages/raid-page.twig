{% extends "@templates/site-layout--no-container.twig" %}

{% block content %}
  <div class="raid">

    <div class="raid-top section">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <h1 class="text-center">Various raid bits up here.</h1>
          </div>
        </div>
      </div>
    </div>


    <div class="raid-members section section-image" style="background-image: url({{ paths.images }}/backgrounds/priest-hall.jpg)">

      <div class="container">

        <div class="row">
          <div class="col-sm-12">
            <h2 class="title text-center">{{ characters|length }} {{ 'Members'|t }}</h2>
          </div>
        </div>

        <div class="row">
          {% for character in characters %}
            <div class="col-sm-2">
              {% include "@molecules/character/raid-member/raid-member.twig" with {
              'character': character
              } %}
            </div>
          {% endfor %}
        </div>

      </div> <!-- /.container -->

    </div> <!-- /.raid-members -->

    <div class="section"></div>
  </div> <!-- /.raid -->
{% endblock %}

{% block sub %}
  {#{% include "@organisms/sections/raid-grid.twig" with { 'raids': raids }%}#}
  <h2>Sub stuff here.</h2>
{% endblock %}
