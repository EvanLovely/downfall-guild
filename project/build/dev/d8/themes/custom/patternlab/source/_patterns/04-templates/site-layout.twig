{% include "@organisms/site/site-nav/site-nav.twig" %}

{% include "@molecules/headers/header.twig" with header %}

{% set content_cols = sidebar ? 8 : 12 %}

<div class="main main-raised">
  <div class="container">

    <div class="row">
      <div class="col-sm-{{ content_cols }}">
        <div class="section">
          {% block content %}
            <h2>Site Content Here</h2>
          {% endblock %}
        </div>
      </div>
      {% if sidebar %}
        <div class="col-sm-4">
          <div class="section">
            {% block sidebar %}
              <h1>Sidebar content here</h1>
            {% endblock %}
          </div>
        </div>
      {% endif %}
    </div> <!-- /.row -->
  </div> <!-- /.container -->
</div> <!-- /.main -->

<div class="container subsection">
  <div class="section">
    {% block sub %}
      <div class="row">

        <div class="col-sm-12">
          <h2 class="title text-center">Downfall Raid Stuff</h2>
          <br>
        </div>

        <div class="col-sm-4">
          {% include "@molecules/cards/card-white.twig" with subsection.left %}
        </div>
        <div class="col-sm-4">
          {% include "@molecules/cards/card-white.twig" with subsection.middle %}
        </div>
        <div class="col-sm-4">
          {% include "@molecules/cards/card-white.twig" with subsection.right %}
        </div>

      </div>
    {% endblock %}
  </div>
</div>

{% include "@organisms/site/site-footer/site-footer.twig" %}
