{% include "@organisms/site/site-nav/site-nav.twig" %}

{% include "@molecules/headers/header.twig" with header %}

{% set content_cols = sidebar ? 8 : 12 %}

<div class="main main-raised">
  <div class="container">

    <div class="row">
      <div class="col-sm-{{ content_cols }}">
        <div class="section">
          {% block content %}
            <h2>Site Content Here</h2>
          {% endblock %}
        </div>
      </div>
      {% if sidebar %}
        <div class="col-sm-4">
          <div class="section">
            {% block sidebar %}
              <h1>Sidebar content here</h1>
            {% endblock %}
          </div>
        </div>
      {% endif %}
    </div> <!-- /.row -->
  </div> <!-- /.container -->
</div> <!-- /.main -->

<div class="container subsection">
  <div class="section">
    {% block sub %}
      <div class="row">

        <div class="col-sm-12">
          <h2 class="title text-center">Downfall Raid Stuff</h2>
          <br>
        </div>

        <div class="col-sm-4">

          <div class="card card-blog">
            <div class="card-image">
              <a href="#pablo">
                <img class="img" src="../../../../images/960x540/960x540.jpg">
              </a>
            </div>
            <div class="content">
              <h6 class="category text-danger">
                <i class="material-icons">trending_up</i> Latest Raid Image
              </h6>
              <h4 class="card-title">
                <a href="#pablo">Downfall kicks some ass</a>
              </h4>
              <div class="footer">
                <div class="author">
                  <a href="#pablo">
                    <img src="../../../..//images/avatars/picture-44.jpg" alt="..." class="avatar img-raised">
                    <span>Saedo</span>
                  </a>
                </div>
                <div class="stats">
                  <i class="material-icons">schedule</i> 5 min read
                </div>
              </div>
            </div>
          </div>

        </div> <!-- /.col-sm-4 -->

        <div class="col-sm-4">

          <div class="card card-blog">
            <div class="card-image">
              <a href="#pablo">
                <img class="img" src="../../../../images/960x540/WoWScrnShot_073116_121145.jpg">
              </a>
            </div>
            <div class="content">
              <h6 class="category text-danger">
                <i class="material-icons">ondemand_video</i> Latest Raid Video
              </h6>
              <h4 class="card-title">
                <a href="#pablo">Downfall kicks some ass</a>
              </h4>
              <div class="footer">
                <div class="author">
                  <a href="#pablo">
                    <img src="../../../..//images/avatars/picture-44.jpg" alt="..." class="avatar img-raised">
                    <span>Saedo</span>
                  </a>
                </div>
                <div class="stats">
                  <i class="material-icons">schedule</i> 5 min read
                </div>
              </div>
            </div>
          </div>

        </div> <!-- /.col-sm-4 -->

      </div>
    {% endblock %}
  </div>
</div>

{% include "@organisms/site/site-footer/site-footer.twig" %}
