{#
Full WoW Character object, merged with a Drupal User object
{
  "character": {
    "class": 2
    "spec": {
      "icon": "path/to/icon",
      "role": "TANK/DPS/HEAL"
    }
  }
}
#}

<div class="character raid-member">
  <div class="raid-member__graphics">
    <div class="raid-member__class">
      {% include "@atoms/wow-class/wow-class-elaborate.twig" with { 'class_id': character.class } %}
    </div>
    <div class="raid-member__character-avatar">
      <div class="raid-member__spec">

        {% include "@atoms/wow-spec/wow-spec.twig" with { 'spec': character.spec } %}

        <div class="raid-member__role">

          {% set role = "TANK" %}
          {% include "@atoms/wow-role/wow-role.twig" with { 'role': character.spec.role } %}

        </div>
      </div>
      {% include "@atoms/character/wow-avatar.twig" with { 'character': character } %}
    </div>
    {% if character.user %}
    <div class="raid-member__df-avatar">
      <a href="{{ character.user.url }}">
        {% include "@atoms/users/user-avatar-hover.twig" with { 'user': character.user } %}
      </a>
    </div>
    {% endif %}
  </div>
  <h3 class="small text-center raid-member__name wow-class wow-class--{{ wow_classes[character.class].name|replace(' ', '-')|lower }}">{{ character.name }}</h3>
</div>
