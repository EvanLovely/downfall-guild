<div class="row node node-full section-text">
  <div class="col-md-10 col-md-offset-1">

    <div class="card card-plain node-full__info">
      <div class="footer">
        <div class="author">
          <a href="#">
            <img src="../../../../images/avatars/picture-44.jpg" alt="..." class="avatar img-raised">
            <span>Saedo</span>
          </a>
        </div>
        <div class="stats">
          <a href="#comments">{{ comments.count }} comments</a> |
          <span> {{ timestamp|date('l, F j, Y \\a\\t g:i a') }}</span>
        </div>
      </div>
    </div>

    <div class="node-full__image-top">
      <div class="pull-out-body">
        <img class="img-rounded img-responsive img-raised" src="{{ fields.image_top }}"/>
      </div>
    </div>

    <div class="node-full__body">
      {{ body }}
    </div>
  </div> <!-- /.col-md-10.col-md-offset-1 -->

  <div class="col-sm-12 node-full__actions">

    {% include "@molecules/navs/actions.twig" %}

    <div id="comments" class="node-full__comments">
      {% include "@organisms/sections/comments.twig" %}
    </div>
  </div> <!-- /.col-sm-12 -->
</div> <!-- /.node-full -->
